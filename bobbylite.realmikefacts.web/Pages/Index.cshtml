@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <header class="hero bg-primary text-white text-center py-5">
            <div class="container">
                <h1 class="display-4">Welcome to Real Mike Facts</h1>
                <p class="lead">A powerful and user-friendly web application for all your needs.</p>
                <a href="#download" class="btn btn-outline-light btn-lg">Sign up</a>
            </div>
        </header>
    
        <!-- Features Section -->
        <section id="features" class="py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="feature-box">
                            <i class="fas fa-random fa-3x mb-3"></i>
                            <h3>OpenAI</h3>
                            <p>Learn about <a href="https://platform.openai.com/docs/introduction">training OpenAI on mike models.</a>.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box">
                            <i class="fas fa-mobile-alt fa-3x mb-3"></i>
                            <h3>Azure AD B2C</h3>
                            <p>Learn about <a href="https://learn.microsoft.com/en-us/aspnet/core/host-and-deploy/azure-apps/?view=aspnetcore-7.0&tabs=visual-studio">hosting with Azure</a>.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box">
                            <i class="fas fa-rocket fa-3x mb-3"></i>
                            <h3>GitHub Actions</h3>
                            <p>Learn about <a href="https://github.com/features/actions">CI/CD with GitHub Actions</a>.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box">
                            <i class="fas fa-cog fa-3x mb-3"></i>
                            <h3>ASP.NET 8</h3>
                            <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box">
                            <i class="fas fa-cog fa-3x mb-3"></i>
                            <h3>Mongo DB</h3>
                            <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">using document model databses with mongo db.</a>.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box">
                            <i class="fas fa-cog fa-3x mb-3"></i>
                            <h3>Azure Web App</h3>
                            <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">Azure web app services.</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    
        <!-- Contact Section -->
        <section id="contact" class="py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h3>Contact Us</h3>
                        <p>If you have any questions or need assistance, please contact us.</p>
                    </div>
                    <div class="col-md-6">
                        <form>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Your Name">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Your Email">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" rows="4" placeholder="Your Message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
</div>
